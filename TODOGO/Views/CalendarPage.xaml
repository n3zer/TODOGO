<Page x:Class="TODOGO.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TODOGO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalendarPage">
    <Page.DataContext>
        <local:CalendarPageViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0"
              Grid.ColumnSpan="2" Grid.RowSpan="2"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Background="#ff4d4d" 
                  Grid.Row="0">
                
                <Label Content="{Binding ElementName=CalendarView,
                    Path=SelectedDate}"
                       VerticalAlignment="Center"
                       Foreground="White" 
                       FontSize="30"
                       Margin="5"
                       FontFamily="Bahnschrift SemiBold SemiCondensed"/>
            </Grid>
            
            <!--Tasks-->
            <Grid Grid.Row="1">
                <ListBox Background="Transparent" BorderThickness="0"></ListBox>
            </Grid>
        
            <Border CornerRadius="0,0,10,10" Background="White" 
                    Grid.Row="0" Grid.RowSpan="2" Panel.ZIndex="-1"/>
            <Grid.Effect>
                <DropShadowEffect Color="#FFA9A6A6" BlurRadius="10"/>
            </Grid.Effect>

        </Grid>

        <Grid Grid.Row="0" Grid.Column="3"
              Grid.ColumnSpan="1" Grid.RowSpan="2"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--Calendar-->
            <Grid Grid.Row="0">

                <Viewbox Stretch="Uniform">

                    <Calendar x:Name="CalendarView"
                              SelectedDate="{Binding CurrentDate}"
                              IsTodayHighlighted="false"
                              CalendarButtonStyle="{DynamicResource CalendarCalendarButtonStyle}" CalendarDayButtonStyle="{DynamicResource CalendarCalendarDayButtonStyle}" BorderThickness="0"
                              CalendarItemStyle="{DynamicResource CalendarCalendarItemStyle}" BorderBrush="{x:Null}" Background="{x:Null}"/>
                </Viewbox>
            </Grid>

            <Border CornerRadius="10" Background="White" Grid.RowSpan="2" Panel.ZIndex="-1"/>
            <Grid.Effect>
                <DropShadowEffect Color="#FFA9A6A6" BlurRadius="10"/>
            </Grid.Effect>

        </Grid>
    </Grid>
</Page>
